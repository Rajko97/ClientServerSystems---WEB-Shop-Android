<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="4dp"
    android:layout_marginTop="6dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="1">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.7"
            android:paddingLeft="4dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/tvNaslov"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Capricciosa"
                    android:textStyle="bold"
                    android:textColor="#090909"/>
                <TextView
                    android:id="@+id/tvOpis"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Paradajz pelat, kackavalj, sunka, sampinjoni" />
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.1">
            <TextView
                android:id="@+id/tvCena"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:textStyle="bold"
                android:text="420" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.2"
            android:orientation="horizontal"
            android:weightSum="1">

            <ImageButton
                android:id="@+id/imgLeft"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.3"
                android:src="@drawable/ic_left_arrow_angle"
                android:background="#fff"/>
            <TextView
                android:id="@+id/tvCount"
                android:layout_width="0dp"
                android:layout_weight="0.4"
                android:layout_height="match_parent"
                android:text="0"
                android:textSize="14sp"
                android:enabled="false"
                android:gravity="center_horizontal|center_vertical"
                />

            <ImageButton
                android:id="@+id/imgRight"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.3"
                android:src="@drawable/ic_right_arrow_angle"
                android:background="#fff"/>
        </LinearLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>